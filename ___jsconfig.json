{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "checkJs": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [ "src/*" ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "dist-stage",
        ".vscode",
        "nbproject",
        "_DEV_DOCS"
    ],
    "include": [ "src/**/*.js", "src/**/*.ts", "src/**/*.vue", "src/shims-vue.d.ts" ],
    "typeAcquisition": {
        "include": [ "vue" ],
        "exclude": [ "vue3" ]
    }
}

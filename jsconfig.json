{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "checkJs": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [ "src/*" ],
            "@components/*": [ "src/components/*" ],
            "@utils/*": [ "src/utils/*" ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "dist-stage",
        ".vscode",
        "nbproject",
        "_DEV_DOCS"
    ],
    "include": [ "src/**/*.js", "src/**/*.ts", "src/**/*.vue" ],
    "typeAcquisition": {
        "include": [ "vue" ]
    }
}

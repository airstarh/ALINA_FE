{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@/*": [ "src/*" ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "jsx": "preserve",
        "lib": [ "esnext", "dom" ],
        "types": [ "vue" ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "allowJs": true
    },
    "vueCompilerOptions": {
        "target": 2.7, // or 3 for Vue 3
        "strictTemplates": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "dist-stage",
        ".vscode",
        "nbproject",
        "_DEV_DOCS"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.js",
        "src/shims-vue.d.ts"
    ]
}
